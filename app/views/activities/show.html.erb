<h1>
  <strong>Project:</strong>
  <%= @activity.project.name %>
</h1>

<h2>
  <strong>Task:</strong>
  <%= @activity.task.name %>
</h2>

<h3>
  <strong>Subtask:</strong>
  <%= @activity.subtask.name if @activity.subtask %>
</h3>

<p>
  <strong>User:</strong>
  <%= @activity.user.name if @activity.user %>
</p>

<p>
  <strong>Start:</strong>
  <%= localize_date_with_weekday @activity.start %>
</p>

<p>
  <strong>End:</strong>
  <%= localize_date_with_weekday @activity.ended %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @activity.duration %> seconds => <%= duration_to_s(@activity.duration) %>
</p>

<p><%= label_tag :chargeable %> <%= check_box_tag nil, nil, @activity.chargeable, disabled: true %></p>

<p><%= label_tag :charged %> <%= check_box_tag nil, nil, @activity.charged, disabled: true %></p>

<p><%= label_tag :charged_date %> <%= localize_date_only_date @activity.charged_date %></p>
<p><%= label_tag :charged_code %> <%= @activity.charged_code %></p>

<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
