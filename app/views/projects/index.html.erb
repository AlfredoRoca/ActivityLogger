<h1><%= t :Listing_projects %></h1>

<table class="table table-stripped table-condensed">
  <thead>
    <tr>
      <th><%= t :Name %></th>
      <th><%= t :Closed %></th>
      <th>Audits</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.closed %></td>
        <td><%= project.audits.count %></td>
        <td><%= link_to "Report", project_report_path(project) %></td>
        <td><%= link_to "Report PDF", project_report_path(project)+'.pdf' %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
